<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Confirmation delete task</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p>{{ task.name }}</p>
    <p>Are you sure you want to delete this task?</p>
    <form method="post" action="{{ path('task_remove', {'id': task.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary" id="btn-task-delete">{{ button_label|default('Delete') }}</button>
</div>