<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Confirmation delete project</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p>{{ project.name }}</p>
    <p>Are you sure you want to delete this project?</p>
    <form method="post" action="{{ path('project_remove', {'id': project.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary" id="btn-project-delete">{{ button_label|default('Delete') }}</button>
</div>